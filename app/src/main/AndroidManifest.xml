<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iptv.iptv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".lib.MainActivity"
            android:banner="@drawable/app_icon"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon"
            android:screenOrientation="landscape" />
        <activity android:name=".lib.DetailsActivity" />
        <activity android:name=".lib.PlaybackOverlayActivity" />
        <activity android:name=".lib.BrowseErrorActivity" />
        <activity
            android:name=".main.HomeActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name"
            android:logo="@drawable/app_icon"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.MobileWelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.LiveActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".main.MovieGridActivity"
            android:parentActivityName=".main.HomeActivity"
            android:theme="@style/Theme.Leanback.VerticalGrid" />
    </application>

</manifest>