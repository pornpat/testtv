<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:paddingTop="@dimen/margin_padding_xsmall"
    android:paddingBottom="@dimen/margin_padding_xsmall"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding_small"
            android:paddingRight="@dimen/margin_padding_small"
            android:paddingTop="@dimen/margin_padding_xxsmall"
            android:paddingBottom="@dimen/margin_padding_xxsmall"
            android:text="LIVE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:background="#FF0000"
            android:singleLine="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_xxsmall"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_normal"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_xxsmall"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"
            android:singleLine="true"/>

    </LinearLayout>

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/text_grey"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="@dimen/margin_padding_mid"
        android:paddingRight="@dimen/margin_padding_mid"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_team1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_highlight"
                android:textStyle="bold"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/txt_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_highlight"
                android:singleLine="true"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_team2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

    </LinearLayout>

</LinearLayout>
